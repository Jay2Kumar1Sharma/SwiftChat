# Real Database Environment Variables
NODE_ENV=development
USE_REAL_LOCAL_DB=true

# Database Configuration
DATABASE_URL=postgresql://chat_user:chat_password@localhost:5432/chat_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chat_db
POSTGRES_USER=chat_user
POSTGRES_PASSWORD=chat_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=super-secret-jwt-key-for-development-at-least-32-characters-long
JWT_REFRESH_SECRET=super-secret-refresh-key-for-development-at-least-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Other Configuration
PORT=4002
AUTH_SERVICE_PORT=4002
FRONTEND_URL=http://localhost:3000
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-for-development
LOG_LEVEL=info
